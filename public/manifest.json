  "shortcuts": [
    {
      "name": "Calculator",
      "short_name": "Calc",
      "description": "Open the calculator app",
      "url": "/?app=calculator",
      "icons": [{ "src": "icons/calculator.png", "sizes": "192x192" }]
    },
    {
      "name": "Terminal",
      "short_name": "Terminal",
      "description": "Open the terminal",
      "url": "/?app=terminal",
      "icons": [{ "src": "icons/terminal.png", "sizes": "192x192" }]
    },
    {
      "name": "File Explorer",
      "short_name": "Files",
      "description": "Browse files and folders",
      "url": "/?app=files",
      "icons": [{ "src": "icons/files.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*", "audio/*", "video/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "mominos",
      "url": "/?protocol=%s"
    }
  ]
